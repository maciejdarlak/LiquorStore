

<li class="dropdown">
    @foreach (var a in Model)
    {
        <a asp-controller="Product" asp-action="List"
           class="dropdown-toggle" data-toggle="dropdown">@a.Category<b class="caret"></b></a>
        <ul class="dropdown-menu">

            @foreach (var b in a.Category)
            {
                <li>
                    <a asp-controller="Product" asp-action="List">@b.SubCategory</a>
                </li>
            }
        </ul>
    }
</li>


